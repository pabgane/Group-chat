<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="413.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.clientchatgroup.controller.ServerController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="372.0" spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="372.0" spacing="10.0">
                    <children>
                        <VBox prefHeight="57.0" prefWidth="355.0" spacing="5.0">
                            <children>
                                <Label text=" Multi Group Chat Client" textFill="#971aeb">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="334.0" spacing="10.0">
                                    <children>
                                        <TextField fx:id="usernameField" prefWidth="150.0" promptText="Enter your username" />
                                        <Button fx:id="connectBtn" onAction="#connectToServer" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: blue; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Connect" />
                                        <Button fx:id="disconnectBtn" onAction="#disconnectFromServer" prefHeight="25.0" prefWidth="98.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Disconnect" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <ScrollPane fx:id="scrollPane" prefHeight="450.0" prefWidth="372.0" vbarPolicy="ALWAYS">
                    <content>
                        <VBox fx:id="chatDisplay" spacing="10.0" />
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="372.0" spacing="10.0">
                    <children>
                        <TextField fx:id="msgInput" prefHeight="35.0" prefWidth="280.0" promptText="Type your message here..." />
                        <Button fx:id="sendBtn" onAction="#sendMsg" prefHeight="31.0" prefWidth="59.0" style="-fx-background-color: black; -fx-border-color: transparent;" text="send" textFill="#f8f7f7" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
